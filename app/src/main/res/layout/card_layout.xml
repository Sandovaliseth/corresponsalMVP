<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="30dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:contentPadding="2dp">

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="82dp"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mes"
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:width="6dp"
                android:text="mm/"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="dd  "
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hora"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="00:00:00"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="168dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="123dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="0dp"
                    android:background="@drawable/btns_azules"
                    android:text="ID consecutivo"
                    android:textAlignment="center"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tipoTransaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de transacción"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/montoTransaccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monto de transacción"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/identificador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número de cédula o cuenta"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>